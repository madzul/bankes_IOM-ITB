# === Database (PostgreSQL) ===
POSTGRES_USER=bankes
POSTGRES_PASSWORD=superstrongpassword123!
POSTGRES_DB=bankes_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# === NextAuth ===
NEXTAUTH_SECRET=generate-random-string-min-32-chars-here-use-openssl-rand-hex-32
NEXTAUTH_URL=https://your-domain.com
NEXT_PUBLIC_NEXTAUTH_URL=https://your-domain.com

# === Azure AD (jika dipakai) ===
AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_TENANT_ID=your-tenant-id

# === MinIO ===
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=superstrongminiopassword123!
MINIO_BUCKET_NAME=bankes-bucket
MINIO_SERVER_URL=http://minio:9000
MINIO_CONSOLE_URL=http://minio:9001

# Untuk aplikasi (di dalam container)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}
MINIO_USE_SSL=false
MINIO_REGION=us-east-1   # optional

# === Admin User (untuk create-admin.js di entrypoint) ===
ADMIN_EMAIL=admin@itb.ac.id
ADMIN_PASSWORD=AdminStrongPass123!
ADMIN_NAME=Administrator
ADMIN_ROLE=Admin

# === Opsional lain (jika dipakai di code) ===
JWT_SECRET=another-random-secret
NEXT_PUBLIC_API_URL=http://localhost:3031   # atau domain backend
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
