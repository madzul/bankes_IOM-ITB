generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String?
  role        Role      
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  // One-to-one relationship with Student
  student   Student?
  
  interviews_as_student Interview[] @relation("StudentInterviews")
  interviews_as_iom     Interview[] @relation("IOMInterviews")
}

model Student {
  id          Int       @id @default(autoincrement())
  nim         String    @unique
  fakultas    String
  prodi       String
  files       File[]

  // One-to-one relationship with User
  user       User      @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_id    Int       @unique
}

model File {
  id          Int       @id @default(autoincrement())
  file_url    String
  file_name   String
  type        FileType  
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  student   Student @relation(fields: [student_id], references: [id])
  student_id Int
}

model Interview {
  id              Int      @id @default(autoincrement())
  student_id      Int
  iom_id          Int
  date_time_start DateTime
  date_time_end   DateTime
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  student User @relation("StudentInterviews", fields: [student_id], references: [id])
  iom     User @relation("IOMInterviews", fields: [iom_id], references: [id])
}

enum Role {
  Mahasiswa
  IOM
}

enum FileType {
  KTP
  CV
  Transkrip_Nilai
}
